<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Đăng ký iisnode để chạy file main.js -->
      <add name="iisnode" path="main.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeJS" stopProcessing="true">
          <!-- Bắt tất cả các URL -->
          <match url=".*" />
          <conditions>
            <!-- Nếu URL không phải file thực tế -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Và không phải thư mục thực tế -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- Rewrite sang main.js để iisnode xử lý -->
          <action type="Rewrite" url="main.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- Bật logging và lỗi chi tiết của iisnode -->
    <iisnode loggingEnabled="true" devErrorsEnabled="true" />
  </system.webServer>
</configuration>
